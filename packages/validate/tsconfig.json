{
	"compilerOptions": {
		"target": "ES2024",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts"]
}
