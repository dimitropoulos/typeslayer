{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"rules": {
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off"
			},
			"correctness": {
				"useHookAtTopLevel": "error"
			}
		}
	},
	"files": {
		"maxSize": 18446744073709551615,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.json",
			"!**/public",
			"!**/dist",
			"!node_modules",
			"!**/gen"
		]
	}
}
